<?xml version="1.0" encoding="utf-8"?>

<Include
  xmlns="www.team-mediaportal.com/2008/mpf/directx"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Source="screens\master_dialog_bare.xaml">
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[Webradio.Dialog.ShowMessage.Title]" />

    <Model x:Key="WebradioModel" Id="BEB5B535-15BF-4C6A-82CF-644ED5A4D8B5" />

    <!-- Contents -->
    <ControlTemplate x:Key="Contents_Template">
      <DockPanel DataContext="{Binding Source={StaticResource WebradioModel}}">
          <Label Content="{Binding Path=Message}" HorizontalContentAlignment="Center"
                 Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                 Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}" />
      </DockPanel>
    </ControlTemplate>
  </Include.Resources>
</Include>
